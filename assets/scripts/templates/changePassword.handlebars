<!-- Password change HTML -->
<form id="change-password">
  <fieldset>
    <input type='password'
    name='credentials[old]' placeholder='old password'>

    <input type='password'
    name='credentials[new]' placeholder='new password'>

    <input type="submit" name="submit" value="Change">
  </fieldset>
</form>
<input type="button" id="cancel-button" value="Cancel">
